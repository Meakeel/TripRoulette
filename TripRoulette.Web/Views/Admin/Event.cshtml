@model IEnumerable<TripRoulette.Domain.Entities.Event>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th class="text-center">Name</th>
                <th class="text-center">Postcode</th>
                <th class="text-right">Price</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.EventID</td>
                    <td class="text-center">@item.Name</td>
                    <td class="text-center">@item.Postcode</td>
                    <td class="text-right">@item.Price.ToString("c")</td>
                    <td class="text-center">@using (Html.BeginForm("EventDetails", "Admin"))
                    {
                        @Html.Hidden("EventID", item.EventID)
                        <input type="submit"
                               class="btn btn-default btn-xs"
                               value="Edit" />
                    }
                        @using (Html.BeginForm("EventDelete", "Admin"))
                        {
                            @Html.Hidden("EventID", item.EventID)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Delete" />
                        }
                    </td>
                </tr>
            }
        </table>    

    <div class="panel-footer">
        @Html.ActionLink("Add a new Event", "EventCreate", null,
            new { @class = "btn btn-default" })
    </div>

    